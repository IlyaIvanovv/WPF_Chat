<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid Cursor="No" Background="#FF343434">
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="44" Margin="392,10,0,0" TextWrapping="Wrap" Text="Имя пользователя" VerticalAlignment="Top" Width="390"/>
        <Button x:Name="bConnDiscon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="241" Height="44"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="86" Margin="10,323,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="772" KeyDown="tbMessage_KeyDown"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="220" Margin="10,73,0,0" VerticalAlignment="Top" Width="772"/>

    </Grid>
</Window>
